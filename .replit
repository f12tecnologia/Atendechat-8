modules = ["nodejs-20", "bash", "web", "postgresql-16"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["redis"]

[[ports]]
localPort = 3000
externalPort = 3003

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8080
externalPort = 8080

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Production"
mode = "parallel"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash start-production.sh"
waitForPort = 5000

[[workflows.workflow]]
name = "Project"
author = "agent"
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && npm start"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && PORT=3000 BROWSER=none npm start"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Production"

# Configuração de Deployment
[deployment]
deploymentTarget = "vm"
run = ["bash", "start-production.sh"]
build = ["bash", "build.sh"]
