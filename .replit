modules = ["nodejs-20", "bash", "web", "postgresql-16"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["redis"]

[[ports]]
localPort = 3000
externalPort = 3003

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 6379
externalPort = 3001

# Workflows
[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Production"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash start-production.sh"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

