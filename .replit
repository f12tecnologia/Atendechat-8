modules = ["nodejs-20", "bash", "web", "postgresql-16"]
[agent]
expertMode = true
integrations = ["javascript_openai_ai_integrations:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["redis"]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 6379
externalPort = 3000

[[ports]]
localPort = 8080
externalPort = 5000

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
author = "agent"
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && npm start"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && PORT=3000 BROWSER=none npm start"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Production"

[[workflows.workflow]]
name = "Production"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/workspace/backend && PORT=5000 node dist/server.js"
waitForPort = 5000

# Configuração de Deployment
[deployment]
deploymentTarget = "vm"
run = ["bash", "start-production.sh"]
build = ["bash", "build.sh"]
